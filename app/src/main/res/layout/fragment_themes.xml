<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.willowtree.vocable.customviews.SettingsButton
        android:id="@+id/themes_button_default"
        style="@style/SettingsOptionButtons"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/default_theme"
        android:drawableEnd="@drawable/checkmark"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.willowtree.vocable.customviews.SettingsButton
        android:id="@+id/themes_button_red"
        style="@style/SettingsOptionButtons"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/color_theme_red_yellow"
        android:drawableEnd="@drawable/checkmark"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/themes_button_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>